rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Project files
    match /projects/{projectId}/{allPaths=**} {
      // Read: Admin or project owner
      allow read: if request.auth != null &&
                     (isAdmin() ||
                      firestore.get(/databases/(default)/documents/projects/$(projectId)).data.clientId == request.auth.uid);

      // Write: Admin or project owner
      allow write: if request.auth != null &&
                      (isAdmin() ||
                       firestore.get(/databases/(default)/documents/projects/$(projectId)).data.clientId == request.auth.uid);
    }

    // User avatars
    match /users/{userId}/avatar {
      // Users can read and write their own avatar, admins can access all
      allow read: if request.auth != null;
      allow write: if request.auth != null &&
                      (request.auth.uid == userId || isAdmin());
    }

    // General uploads (for admins only)
    match /uploads/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
